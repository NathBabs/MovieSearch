<link rel="stylesheet" href="/app.css">
<link rel="stylesheet" href="/materialize.css">


<div class="container">
<h1 style="text-align:center">
Results
</h1>
<div class='row'>

<div class='col s12 l6 offset-l3'>
<div class="card hoverable large white-text black">
<div class="card-image">
<img src="<% if (data.Poster == 'N/A') { %>
    <%='https://via.placeholder.com/332x300?text=Movie+Poster+unavailable' %>
<% } else { %> 
    <%= data.Poster %>
<% } %>" alt="">
</div>
<div class="card-content">
<span class="card-title"><%= data.Title %> - <%- data.Year %> </span>
<p>
<%- data.Plot %> 
</p>
</div>
</div>
</div>


</div>
</div>

<script src="/materialize.js"></script>

